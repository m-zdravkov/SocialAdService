@using MvcClient.SocialAdService;
@model MvcClient.SocialAdService.User

@{
    ViewBag.Title = "Profile";
}

<h2>@Model.Name</h2>
<hr />
<br />
<br />
<br />
<div>
    @{
        Ad[] list = TempData["postedAds"] as Ad[];
        if (list?.Count() > 0)
        {
            <h3>Your posted ads (@list.Count())</h3>
            <hr />

            foreach (var ad in list)
            {
                <div>
                    <h4>
                        "@ad.Title" by you in @ad.Location.Name
                    </h4>
                    <br />
                    @ad.Content
                    <hr />
                </div>
            }
        }
    }
</div>