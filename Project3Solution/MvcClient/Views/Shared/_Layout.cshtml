@using MvcClient.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Social Ad Service</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" runat="server">
    <link rel="stylesheet" href="~/Content/bootstrap-grid.css" type="text/css">
    <link rel="stylesheet" href="~/Content/StyleSheet1.css" type="image/svg">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<!--
<body style="background-image: url('https://images.pexels.com/photos/19670/pexels-photo.jpg?w=1920&h=1080&auto=compress&cs=tinysrgb');
    background-repeat: no-repeat;
    background-attachment: fixed;">
    -->
    <body style = "background-image: url('https://wallpaperscraft.com/image/green_spot_background_bright_65614_1920x1080.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("«Social Ad Service»", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (AuthHelper.IsLoggedIn())
                        {
                            <li><p class="navbar-text">Welcome, @AuthHelper.CurrentUser.Name</p></li>
                            <li>@Html.ActionLink("Log out", "LogOut", "Auth")</li>
                            <li>@Html.ActionLink("Post", "Ad", "Post")</li>


                        }
                        else
                        {
                            <li>@Html.ActionLink("Log in", "Index", "Auth")</li>
                            <li>@Html.ActionLink("Sign up", "Register", "User")</li>

                        }
                        <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    }
                </ul>

                @{
                    if (AuthHelper.IsLoggedIn())
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="@Url.Action("Index", "User")">
                                    <span class="glyphicon glyphicon-user"></span>
                                    Your Account
                                </a>
                            </li>
                            <!--
                            <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                            -->
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Social Ad Service</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

