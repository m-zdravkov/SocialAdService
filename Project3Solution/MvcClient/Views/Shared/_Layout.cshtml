@using MvcClient.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/StyleSheet.css" type="text/css" runat="server">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("«Social Ad Service»", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    @{
                        if (AuthHelper.IsLoggedIn())
                        {
                            <li><p class="navbar-text">Logged in with @AuthHelper.CurrentUser.Email</p></li>
                            <li>@Html.ActionLink("Log out", "LogOut", "Auth")</li>
                            <li>@Html.ActionLink("All Users", "Index", "User")</li>
                            <li>@Html.ActionLink("Post", "Ad", "Post")</li>


                        }
                        else
                        {
                            <li>@Html.ActionLink("Log in", "Index", "Auth")</li>
                            <li>@Html.ActionLink("Sign up", "Register", "User")</li>

                        }
                    }
                </ul>

                @{
                    if (AuthHelper.IsLoggedIn())
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <!--
                            <li>
                                <span class="glyphicon glyphicon-user"></span>
                                @Html.ActionLink("Your account", "Index", "Home")
                            </li>-->
                            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Your Account</a></li>
                            <!--
                            <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                            -->
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

